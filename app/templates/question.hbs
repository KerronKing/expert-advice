<h2 class="mt-5 pt-5 offset-1">Question</h2>
<h3 class="mt-4 pt-4 offset-1">{{model.title}}</h3>
<h4 class="offset-1 mt-3 mb-5 pb-5">{{model.description}}</h4>

<form
  onsubmit={{action "createAnswer" model}}
  class="offset-1 mb-5"
>
  <h2>Answer</h2>
  <div class="mt-3 mb-2">
    <label for="body">Body</label><br />
    {{textarea rows="12" cols="60" value=body}}
  </div>
  <button type="submit" class="btn btn-primary">Post An Answer</button>
</form>

{{#if model.answers}}
  {{#each model.answers as |answer|}}    
    <p class="offset-1 my-3">{{answer.body}}</p>
  {{/each}}
{{else}}
  <p class="offset-1 my-3">No answers currently..</p>
{{/if}}